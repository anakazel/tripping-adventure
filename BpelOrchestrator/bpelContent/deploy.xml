<?xml version="1.0" encoding="UTF-8"?>
<deploy 
  xmlns="http://www.apache.org/ode/schemas/dd/2007/03" 
  xmlns:dir="http://www.wscomposition.org/Directions/"
  xmlns:pla="http://www.wscomposition.org/Places/" 
  xmlns:composer="http://composer">

  <process name="composer:Composer">
    <active>true</active>
    <retired>false</retired>
    <process-events generate="all"/>
    <provide partnerLink="ComposerClient">
      <service name="composer:ComposerService" port="ComposerPort"/>
    </provide>
    <invoke partnerLink="DirectionsPL">
      <service name="dir:Directions" port="DirectionsHTTP"/>
    </invoke>
    <invoke partnerLink="PlacesPL">
      <service name="pla:Places" port="PlacesHTTP"/>
    </invoke>
  </process>
</deploy>